<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tittle_khoanchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Khoáº£n chi"
            android:textColor="#353535"
            android:textStyle="bold"
            android:textSize="21sp"/>

        <RelativeLayout
            android:id="@+id/bulkhead"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tittle_khoanchi"
            android:background="#e8dede" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechartKhoanChi"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/bulkhead"
            />

        <RelativeLayout
            android:id="@+id/bulkhead2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/piechartKhoanChi"
            android:background="#e8dede" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvKhoanChi"
            android:layout_below="@id/bulkhead2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
